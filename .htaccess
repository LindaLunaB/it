<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^$ public/ [L]
    RewriteRule (.*) public/$1 [L]
</IfModule>

<FilesMatch "^\.env">
    Order Allow,Deny
    Deny from all
</FilesMatch>

<FilesMatch "^composer\.json">
    Order Allow,Deny
    Deny from all
</FilesMatch>

<FilesMatch "^composer\.lock">
    Order Allow,Deny
    Deny from all
</FilesMatch>